{
  "id": "youtube-captions",
  "name": "YouTube Captions",
  "description": "Extract captions from YouTube videos",
  "version": "1.0.0",
  "author": "LlamB Extension",
  "icon": "ðŸ’¬",
  "matches": [
    "*://www.youtube.com/watch*",
    "*://youtube.com/watch*"
  ],
  "permissions": [
    "extractContent"
  ],
  "settings": {
    "preferredLanguage": {
      "type": "select",
      "label": "Preferred Language",
      "default": "en",
      "options": [
        { "value": "en", "label": "English" },
        { "value": "es", "label": "Spanish" },
        { "value": "fr", "label": "French" },
        { "value": "de", "label": "German" },
        { "value": "ja", "label": "Japanese" },
        { "value": "ko", "label": "Korean" },
        { "value": "zh", "label": "Chinese" }
      ]
    },
    "includeTimestamps": {
      "type": "boolean",
      "label": "Include Timestamps",
      "default": false,
      "description": "Include timestamps with caption text"
    },
    "includeAutoGenerated": {
      "type": "boolean", 
      "label": "Include Auto-Generated Captions",
      "default": true,
      "description": "Allow auto-generated captions if manual ones are not available"
    }
  },
  "requirements": {
    "domains": ["youtube.com"],
    "javascript": true
  }
}